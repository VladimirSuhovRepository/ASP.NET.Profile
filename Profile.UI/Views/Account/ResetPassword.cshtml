@{
    ViewBag.Title = "Восстановление пароля - Profile";
}

<div class="container">
    <div class="prf-main">
        <section class="prf-main-content">
            <section class="prf-main-section passwordRecoveryNewPass">
                <div class="row headline">
                    <div class="col-xs-4 col-xs-offset-2 pageTitle text-left">
                        <h1 class="title">Восстановление пароля</h1>
                    </div>
                </div>

                <form id="newPassword">
                    <div class="row wrap">
                        <div class="col-xs-5 col-xs-offset-2">
                            <div class="form-group">
                                <label class="text-left" for="password1">Введите ваш новый пароль</label>
                                <input id="password0" name="password0" value="@ViewBag.Token" type="hidden">
                                <input type="password" class="form-control" name="password1" id="password1" placeholder="Новый пароль" data-inputmask-regex="^[a-zA-Z0-9]*$">
                            </div>
                            <div class="form-group">
                                <label class="text-left" for="password2">Подтвердите пароль</label>
                                <input type="password" class="form-control" name="password2" id="password2" placeholder="Новый пароль" data-inputmask-regex="^[a-zA-Z0-9]*$">
                            </div>
                        </div>
                    </div>
                    <div class="row wrap">
                        <div class="col-xs-5 col-xs-offset-2 text-left">
                            <button id="saveButton" class="button btn btn-default saveButton">Готово</button>
                        </div>
                    </div>
                </form>

                <div class="modal fade col-sm-4 confirmationPopup" id="passwordMatch" style="margin:0 auto;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myModalLabel">Введенные пароли не совпадают</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary ok_btn_modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div><!-- confirmationPopup -->

                <div class="modal fade col-sm-4 confirmationPopup" id="matchOldPassword" style="margin:0 auto;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myModalLabel">Новый пароль должен отличаться от предыдущего</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary ok_btn_modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div><!-- confirmationPopup -->

                <div class="modal fade col-sm-4 confirmationPopup" id="okConfirm" style="margin:0 auto;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myModalLabel">Пароль успешно изменен</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary ok_btn_modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div><!-- confirmationPopup -->
            </section><!-- prf-main-section passwordRecovery -->
        </section><!-- prf-main-content -->
    </div><!-- prf-main -->
</div><!-- container -->

@section Scripts {
    @Scripts.Render("~/bundles/reset-password")
}