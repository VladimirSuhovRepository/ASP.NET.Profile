@model IEnumerable<Profile.UI.Models.ProjectViewModel>

@{
    ViewBag.Title = "Проекты - Profile";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 pageTitle">
            <h1 class="text-center">Проекты</h1>
        </div>
    </div>
    <table id="example">
        <thead>
            <tr><th></th></tr>
        </thead>
        <tbody class="row projectWrapper">
            @foreach (var project in Model)
            {
                <tr class="col-lg-4 projectItem">
                    <td>
                        <div class="row">
                            <div class="col-lg-12 projectInfo">
                                <h2 class="projectName">
                                    @Html.ActionLink(project.Name, "View", "Project", new { id = project.Id }, null)
                                </h2>

                                <p class="projectSummary">@project.ShortDescription</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 projectTerms">
                                <p class="text-center projectStart">
                                    @project.StartDate.ToString("dd.MM.yyyy")
                                </p>
                            </div>
                            <div class="col-lg-6 projectTerms">
                                <p class="text-center projectEnd">
                                    @project.FinishDate.ToString("dd.MM.yyyy")
                                </p>
                        </div>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/tables")
    <script src="~/Scripts/Custom/projectPage.js"></script>
}
