@model Profile.UI.Models.Profile.SkillsViewModel

<form class="prf-efit-form" action="javascript: alert('Submit');" method="POST" role="form" name="traineeSkills" data-action="/Skill/EditSkills">
    <button class="prf-edit btn-link" type="button" id="" title="Редактировать">
        <span class="glyphicon glyphicon-pencil"></span>
    </button>
    <div class="row ">
        <div class="prf-add-inform clearfix">
            <h5>Навыки</h5>
            <!-- Main Skills -->
            @Html.Partial("_EditPartialMainSkills", Model.Specialization)
            <!-- end of Main Skills -->
            <!-- Soft Skills -->
            @Html.Partial("_EditPartialSoftSkills", Model.SoftSkills)
            <!-- end of Soft Skills -->
        </div>
    </div>
    <!-- Block of Buttons -->
    <div class="row  prf-underline prf-button-edit">
        <button type="button" class="btn btn-primary prf-add-soft-skill"><span class="glyphicon glyphicon-plus"></span> Добавить навык</button>
        <button type="submit" class="btn btn-info prf-submit"><span>Сохранить</span></button>
        <button type="button" class="btn btn-warning prf-cansel">Отмена</button>
    </div>
    <!-- end of Block of Buttons -->
</form>

<!-- Soft Skill Template -->
<div class="row hidden prf-add-inform prf-soft-skill" id="blankSoftSkill" data-soft-skill-id="0">
    <div class="prf-relative">
        <button type="button" class="btn btn-danger prf-delete-btn prf-delete-soft-skill" title="Удалить">
            <span>
                <span class="glyphicon glyphicon-remove"></span>
            </span>
        </button>
        <div class="form-group prf-required prf-deletable">
            <div class="form-group prf-required">
                <input class="form-control" data-soft-skill="softSkillName" type="text" placeholder="Впишите навык" value="" maxlength="64" required>
                <span title="Обязательно для заполнения">*</span>
            </div>
        </div>
    </div>
</div>
<!-- end of Soft Skill Template -->