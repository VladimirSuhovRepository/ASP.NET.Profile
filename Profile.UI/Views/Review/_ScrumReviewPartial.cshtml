@model Profile.UI.Models.ScrumReviewViewModel

<section class="prf-main-section" id="SMreview">
	<div class="row SMinfo">
        <div class="col-sm-2 col-xs-6 reviewBy"><span>Отзыв оставил:</span></div>
        <div class="col-sm-3 col-xs-6 name"><span>@Model.ScrumMasterName</span></div>
        <!-- <div class="col-xs-7 position"><span>Scrum Master</span></div> -->
	</div>
	<div class="row">
        <div class="col-sm-10 col-xs-9 col-xs-offset-1">
            <p class="reviewText">@Model.Comment</p>
        </div>
        <div class="col-xs-1 markBox">
            <div class="text-center">@Model.Mark</div>
        </div>
	</div>
</section>