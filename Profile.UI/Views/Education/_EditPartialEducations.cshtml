@model Profile.UI.Models.Profile.EducationsViewModel

<form class="prf-efit-form" action="javascript: alert('Submit');" method="POST" role="form" name="traineeEducation" data-action="/Education/EditEducations">
    <button class="prf-edit btn-link" type="button" id="" title="Редактировать">
        <span class="glyphicon glyphicon-pencil"></span>
    </button>
    <div class="row  ">
        <div class="prf-add-inform">
            <h5>Образование</h5>
            <div id="University">
                @Html.Partial("_EditPartialUniversities", Model.Universities)
            </div>
            <div id="Course">
                @Html.Partial("_EditPartialCourses", Model.Courses)
            </div>
        </div>
    </div>
    <!-- Block of Buttons -->
    <div class="row  prf-underline prf-button-edit prf-help-hide-line">
        <button type="button" class="btn btn-primary prf-add-university">Добавить университет</button>
        <button type="button" class="btn btn-primary prf-add-course">Добавить курс</button>
        <button type="submit" class="btn btn-info prf-submit"><span>Сохранить</span></button>
        <button type="button" class="btn btn-warning prf-cansel">Отмена</button>
    </div>
    <!-- end of Block of Buttons -->
</form>
<!-- University template -->
<div class="row hidden prf-add-inform prf-underline-decoration prf-university" id="blankUniversity" data-university-id="0">
    <div class="col-sm-4 col-sm-offset-1 prf-study">
        <div class="prf-relative">
            <button type="button" class="btn btn-danger prf-delete-btn prf-delete-university" title="Удалить">
                <span>
                    <span class="glyphicon glyphicon-remove"></span>
                </span>
            </button>
            <div class="form-group prf-required prf-deletable">
                <input class="form-control prf-time-period" data-university="timePeriod" type="text" placeholder="Период обучения" value="" maxlength="40" required>
                <span title="Обязательно для заполнения">*</span>
            </div>
        </div>
    </div>
    <div class="col-sm-6  prf-study">
        <div class="form-group prf-required">
            <input class="form-control" data-university="universityEstablishment" type="text" placeholder="Наименование учебного заведения" value="" maxlength="150" required>
            <span title="Обязательно для заполнения">*</span>
        </div>
        <div class="form-group prf-required">
            <input class="form-control" data-university="specialization" type="text" placeholder="Специализация" value="" maxlength="150" required>
            <span title="Обязательно для заполнения">*</span>
        </div>
        <div class="form-group prf-required">
            <input class="form-control" data-university="specialty" type="text" placeholder="Специальность" value="" maxlength="150" required>
            <span title="Обязательно для заполнения">*</span>
        </div>
        <div class="form-group">
            <textarea class="form-control prf-not-required" data-university="additionalInformation" placeholder="Дополнительная информация" rows="6" maxlength="300" required></textarea>
        </div>
    </div>
</div>
<!-- end of University template -->
<!-- Course template -->
<div class="row hidden prf-add-inform prf-underline-decoration prf-course" id="blankCourse" data-course-id="0">
    <div class="col-sm-4 col-sm-offset-1 prf-study">
        <div class="prf-relative">
            <button type="button" class="btn btn-danger prf-delete-btn prf-delete-course" title="Удалить">
                <span>
                    <span class="glyphicon glyphicon-remove"></span>
                </span>
            </button>
            <div class="form-group prf-required prf-deletable">
                <input class="form-control prf-time-period" data-course="timePeriod" type="text" placeholder="Период обучения" value="" maxlength="40" required>
                <span title="Обязательно для заполнения">*</span>
            </div>
        </div>
    </div>
    <div class="col-sm-6  prf-study">
        <div class="form-group prf-required">
            <input class="form-control" data-course="courseEstablishment" type="text" placeholder="Наименование учебного заведения" value="" maxlength="150" required>
            <span title="Обязательно для заполнения">*</span>
        </div>
        <div class="form-group prf-required">
            <input class="form-control" data-course="courseName" type="text" placeholder="Наименование курсов" value="" maxlength="150" required>
            <span title="Обязательно для заполнения">*</span>
        </div>
        <div class="form-group">
            <textarea class="form-control prf-not-required" data-course="additionalInformation" placeholder="Дополнительная информация" rows="6" maxlength="300" required></textarea>
        </div>
    </div>
</div>
<!-- end of Course template -->